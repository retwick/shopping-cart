<div class="container">
    {{#each products}}
    <div class="row">
    	{{#each this}}
        <div class="col-sm">
            <div class="card" style="width: 20rem;">
                <img class="card-img-top" src="{{this.imagePath}}" alt="Card image cap" class="img-responsive">
                <div class="card-body">
                    <h4 class="card-title">{{this.title}}</h4>
                    <p class="card-text">{{this.description}}</p>
                    <div class="price"> ${{this.price}} </div>
                    <a href="#" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
        </div>
        {{/each}}              
    </div>
    {{/each}}
</div>